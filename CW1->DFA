<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>DFA for { w | w is binary does not contain 00 in w} </title>

<script>
"use strict";
function delta(q, c) { // (1|0)*10
    if (q=='A' && c=='0') return 'B'
    if ((q=='A' || q=='B') && c=='1') return 'A'
    if ((q=='B' || q=='c') && q=='0') return 'C' 
    if (c=='C' && c=='1') return 'C'
    return '';  //default -- no transition
}
function accept(w, F='C', q='A') {
    //w: input String
    //F: final state(s)
    //q: current state
    let i = 0, txt = q
    while (i < w.length) {
        q = delta(q, w[i])
        if (q == '') break
        i++; txt += " -> "+q
    }
    input.selectionStart = i
    input.selectionEnd = i+1
    let a = (q!='' && F.includes(q))
    return txt+'  '+(a? "Accept" : "Reject")
}
function test() {
    let w = input.value, s = "  "
    for (let c of w) s += c+"    "
    s += '\n'+accept(w, final.value)
    console.log(s); out.innerHTML = s
}
</script>
</head>

<body>

<h2 id=title></h2>

<p>Deterministic finite automaton</p>

w = <input id=input type=text value=01001010
  onChange="test()"> &emsp;
F = <input id=final type=text value=C
  onChange="test()">

<pre id=out></pre>

